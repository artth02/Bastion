{
  "name": "bastion-api",
  "version": "2.1.0",
  "description": "A Real Time Notification API",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "test": "npm run lint && nyc npm run test-mocha",
    "test-mocha": "cross-env NODE_ENV=test mocha --harmony --exit ./libs/**/*Spec.js",
    "test-mocha-watch": "cross-env NODE_ENV=test mocha --watch --harmony ./libs/**/*Spec.js",
    "precommit": "npm run git-hook",
    "prepush": "npm run git-hook",
    "git-hook": "npm run lint -s && npm run test -s",
    "lint": "standard --verbose | snazzy",
    "lint:fix": "standard --fix",
    "lintdiff": "git diff --name-only --cached --relative | grep '\\.js$' | xargs standard | snazzy",
    "coverage": "cross-env NODE_ENV=test nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artth02/bastion.git"
  },
  "keywords": [
    "nodejs",
    "api"
  ],
  "engines": {
    "node": ">=14.2.0",
    "npm": ">=6.14.4"
  },
  "author": "Arthur R. Fonseca",
  "license": "",
  "dependencies": {
    "@hapi/hapi": "^18.4.1",
    "@hapi/joi": "^17.1.1",
    "aws-sdk": "^2.670.0",
    "chalk": "^4.0.0",
    "config": "^3.3.1",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "flatted": "^2.0.2",
    "hapi-swaggered": "^3.0.2",
    "hapi-swaggered-ui": "^3.0.2",
    "inert": "^5.1.3",
    "newrelic": "^6.7.1",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "uuid": "^8.0.0",
    "vision": "^5.4.4",
    "ws": "^7.3.0"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "describe",
      "it",
      "test",
      "socketIO",
      "socketClient",
      "connectedClients",
      "wsServer"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "exclude": [
      "packages/**/*"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": false
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "husky": "^4.2.5",
    "mocha": "^7.1.2",
    "nyc": "^15.0.1",
    "snazzy": "^8.0.0",
    "standard": "^14.3.4"
  }
}
